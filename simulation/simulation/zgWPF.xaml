<UserControl x:Class="simulation.zgWPF" x:Name="parent" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:simulation"
             xmlns:zed="clr-namespace:ZedGraph;assembly=ZedGraph"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="parent_Loaded">
    <DockPanel DataContext="{Binding ElementName=parent}">
        <WindowsFormsHost>
            <zed:ZedGraphControl x:Name="ZedGraphPlot" />
        </WindowsFormsHost>
    </DockPanel>
</UserControl>
