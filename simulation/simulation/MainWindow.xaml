<Fluent:RibbonWindow
    xmlns:Fluent="urn:fluent-ribbon" x:Class="simulation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:simulation"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    mc:Ignorable="d"
        Title="mSIM" Height="600" Width="800" DataContext="{Binding Main, Source={StaticResource Locator}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Fluent:Ribbon Grid.Row="0">
            <!--Backstage-->
            <Fluent:Ribbon.Menu>
                <Fluent:Backstage>
                </Fluent:Backstage>
            </Fluent:Ribbon.Menu>

            <!--Contextual Tab Groups-->
            <Fluent:Ribbon.ContextualGroups>
                <Fluent:RibbonContextualTabGroup x:Name="MaterialsGroup"
                                     Header="Materials" 
                                     Visibility="{Binding MainWin.MaterialsVis}"
                                     Background="Green" 
                                     BorderBrush="Green" />
            </Fluent:Ribbon.ContextualGroups>
            <!--Tabs-->
            <!--Contextual Tabs-->
            <Fluent:RibbonTabItem Header="Simulation">
                <Fluent:RibbonGroupBox Header="Load">
                    <Fluent:Button Header="From file" Icon="{iconPacks:Material Kind=FolderOpen}" 
                                   LargeIcon="{iconPacks:Material Kind=FolderOpen, Height=28, Width=28}" />
                    <Fluent:Button Header="Grey" Click="Button_Click"  
                                   LargeIcon="{iconPacks:Material Kind=FolderOpen, Height=28, Width=28}" />
                </Fluent:RibbonGroupBox>
                <Fluent:RibbonGroupBox Header="Itegration">
                    <Fluent:Button Header="Green" />
                    <Fluent:Button Header="Grey" Click="Button_Click"  />
                </Fluent:RibbonGroupBox>
                <Fluent:RibbonGroupBox Header="Model">
                    <Fluent:Button Header="Green" />
                    <Fluent:Button Header="Grey" Click="Button_Click"  />
                </Fluent:RibbonGroupBox>
                <Fluent:RibbonGroupBox Header="Object">
                    <Fluent:Button Header="Green" />
                    <Fluent:Button Header="Grey" Click="Button_Click"  />
                </Fluent:RibbonGroupBox>
            </Fluent:RibbonTabItem>
            <Fluent:RibbonTabItem Header="Load">
                <Fluent:RibbonGroupBox Header="Group">
                    <Fluent:Button Header="Green" />
                    <Fluent:Button Header="Grey"  />
                </Fluent:RibbonGroupBox>
            </Fluent:RibbonTabItem>
            <Fluent:RibbonTabItem Header="Parameters" Group="{Binding Source={x:Reference MaterialsGroup}}">
                <Fluent:RibbonGroupBox Header="Group">
                    <Fluent:Button Header="6345" />
                    <Fluent:Button Header="Grey"  />
                </Fluent:RibbonGroupBox>
            </Fluent:RibbonTabItem>
            
            
        </Fluent:Ribbon>

        <Grid Grid.Row="1">
            <Button Content="dfd" Width="50" Height="50" Click="Button_Click_1"/>
        </Grid>
    </Grid>
</Fluent:RibbonWindow>
