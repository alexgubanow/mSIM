<UserControl x:Name="parent" x:Class="simulation.numPowTen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:simulation"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" >
    <StackPanel Orientation="Horizontal"  DataContext="{Binding ElementName=parent}">
        <Label Content="{Binding Path=Clabel}"/>
        <TextBox Text="{Binding Path=num}" MinWidth="30"/>
        <Label Content="*10^"/>
        <TextBox Text="{Binding Path=PowTen}" MinWidth="30"/>
    </StackPanel>
</UserControl>
